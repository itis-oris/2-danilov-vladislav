<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<BorderPane styleClass="main-menu" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.controllers.HelloController" >
   <top>
      <Text styleClass="game-title" strokeType="OUTSIDE" strokeWidth="0.0" text="Tactic Battle Rush" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="75.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <bottom>
      <Label text="DanilovProfGroup.com" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: center;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Room" />
            <TextField fx:id="room">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin></TextField>
            <Button styleClass="my_button" mnemonicParsing="false" onAction="#startGame" text="Start">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="50.0" left="200.0" right="200.0" top="50.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
